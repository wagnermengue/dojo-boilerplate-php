{
    "name": "wagnermengue/dojoboilerplate",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Wagner Mengue"
        }
    ],
    "require": {
        "php": "^8.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6"
    },
    "autoload": {
        "psr-4": {
            "Dojo\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Dojo\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit -c phpunit.xml"
    },
    "scripts-descriptions": {
        "test": "Run all tests!"
    }
}
